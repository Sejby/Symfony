{% extends "base.html.twig" %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Jméno</th>
				<th scope="col">Příjmení</th>
				<th scope="col">Věk</th>
				<th scope="col">Zvíře</th>
			</tr>
		</thead>
		{% for postava in list %}
			<tbody>
				<tr>
					<th scope="row">{{postava.id}}</th>
					<td>{{postava.jmeno}}</td>
					<td>{{postava.prijmeni}}</td>
					<td>{{postava.vek}}</td>
					<td>{{postava.zvire}}</td>
                    <td><a class="btn btn-warning" href="{{path('uprav', {'id': postava.id })}}">Upravit</a></td>
                    <td><a class="btn btn-danger" href="{{path('smaz', {'id': postava.id })}}">Smazat</a></td>
				</tr>
			</tbody>
		{% endfor %}
	</table>
{% endblock %}
